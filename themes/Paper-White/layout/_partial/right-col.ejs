<div class="intrude-less">
	<header id="header" class="inner">
		<div class="profileCard">
			<div class="overlay"></div>
			<a href="/" class="profilepic">
			<% if (theme.animate){ %>
				<img lazy-src="<%=theme.avatar%>" class="js-avatar">
			<% } else { %>
				<img src="<%=theme.avatar%>" class="js-avatar" style="width: 100%;height: 100%;opacity: 1;">
			<% } %>
			</a>

			<hgroup>
				<h1 class="header-author"><a href="/"><%=theme.author%></a></h1>
				<% if (theme.subtitle){ %>
					<p class="header-subtitle"><%=theme.subtitle%></p>
				<% } %>
			</hgroup>
			<div class="social">
				<% for (var i in theme.subnav){ %><a class="<%= i %>" target="_blank" href="<%- url_for(theme.subnav[i]) %>" title="<%= i %>">
						<% if (i=='mail') { %>
							<i class="fa fa-envelope-o"></i>
						<% } else if (i=='linkedin') { %>
							<i class="fa fa-linkedin-square"></i>
						<% } else if (i=='google') { %>
							<i class="fa fa-google-plus"></i>
						<% } else if (i=='facebook') { %>
							<i class="fa fa-facebook-official"></i>
						<% } else { %>
							<i class="fa fa-<%= i %>"></i>
						<% } %>
					</a><% } %>
			</div>
		</div>

		<div class="switch-btn">
				<div class="icon">
					<div class="icon-ctn">
						<div class="icon-wrap icon-house" data-idx="0">
							<i class="fa fa-bars"></i>
						</div>
						<%if(theme.tagcloud){%>
						<div class="icon-wrap icon-ribbon hide" data-idx="1">
							<div class="ribbon"></div>
						</div>
						<%}%>
						<% if(item.toc !== false && table) { %>
							<div class="icon-wrap icon-bookmark hide" data-idx="2">
								<i class="fa fa-bookmark-o"></i>
							</div>
						<%}%>
						<%if(theme.friends && theme.friends.length != 0){%>
						<div class="icon-wrap icon-link hide" data-idx="3">
							<div class="loopback_l"></div>
							<div class="loopback_r"></div>
						</div>
						<%}%>
						<%if(theme.aboutme){%>
						<div class="icon-wrap icon-me hide" data-idx="4">
							<div class="user"></div>
							<div class="shoulder"></div>
						</div>
						<%}%>
					</div>
					
				</div>
				<div class="tips-box hide">
					<div class="tips-arrow"></div>
					<ul class="tips-inner">
						<li>导航</li>
						<% if(theme.tagcloud) { %>
						<li>标签</li>
						<% } %>
						<% if(item.toc !== false && table) { %>
						<li>文章目录</li>
						<% } %>
						<%if(theme.friends && theme.friends.length != 0){%>
						<li>朋友们</li>
						<%}%>
						<%if(theme.aboutme){%>
						<li>关于我</li>
						<%}%>
					</ul>
				</div>
		</div>


		<div class="switch-area">
			<div class="switch-wrap">
				<section class="switch-part switch-part1">
					<nav class="header-menu">
						<ul>
						<% for (var i in theme.menu){ %>
							<li><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
				        <%}%>
				        <% if(!table) { %>
				        	<li>
				        		<div>
    								<label for="ajax-switch" class="ajax-checkbox">
        								<input class="access-hide" disabled id="ajax-switch" name="auto-load" type="checkbox" />开启首页自加载<span class="switch-toggle"></span>
    								</label>
								</div>
				        	</li>
				        <% } %>
				        <li>
				        	<form class="search-box" action="//google.com/search" method="get" target="_blank" accept-charset="utf-8">
				        		<input type="text" id="search" name="q" autocomplete="off" maxlength="20" placeholder="">
				        		<label class="search-icon" for="search">
				        			<%- partial('search-icon') %>
				        		<input type="hidden" class="hide" name="q" value="site:<%- config.url.replace(/^https?:\/\//, '') %>">
				        		</label>
				        	</form>
				        </li>
				        <li id="totop" title="回顶部"><i class="fa fa-angle-double-up"></i></li>
						</ul>
					</nav>
					<nav class="header-nav">

					</nav>
				</section>
				
				<%if(theme.tagcloud){%>
				<section class="switch-part switch-part2">
					<div class="widget tagcloud" id="js-tagcloud">
						<%- tagcloud() %>
					</div>
				</section>
				<%}%>

				<% if(item.toc !== false && table) { %>
					<section class="switch-part switch-part3">
						<div id="toc" class="toc-article">
							<% if(item.list_number === false) {%>
								<%- toc(item.content,{list_number:false}) %>
							<% }else{ %>
								<%- toc(item.content) %>
							<% } %>
						</div>
					</section>
				<% } %>
				
				<%if(theme.friends && theme.friends.length != 0){%>
					<section class="switch-part switch-part4">
						<div id="js-friends">
						<% for (var i in theme.friends){ %>
			          		<a target="_blank" class="main-nav-link switch-friends-link" href="<%- url_for(theme.friends[i]) %>"><%= i %></a>
			        	<% } %>
			        	</div>
					</section>
				<%}%>

				<%if(theme.aboutme){%>
					<section class="switch-part switch-part5">
						<div id="js-aboutme"><%=theme.aboutme%></div>
					</section>
				<%}%>
			</div>
		</div>
	</header>				
</div>