<nav id="mobile-nav">
  	<div class="overlay">
  		<div class="banner-cover"></div>
  		<div class="slider-trigger"></div>
  		<h1 class="header-author js-mobile-header hide"><%=theme.author%></h1>
  	</div>
	<div class="intrude-less">
		<header id="header" class="inner">
			<div class="profilepic">
				<img lazy-src="<%=theme.avatar%>" class="js-avatar">
			</div>
			<hgroup>
			  <h1 class="header-author"><%=theme.author%></h1>
			</hgroup>
			<% if (theme.subtitle){ %>
			<p class="header-subtitle"><%=theme.subtitle%></p>
			<%}%>
			<nav class="header-menu">
				<ul>
				<% for (var i in theme.menu){ %>
					<li><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
		        <%}%>
		        <div class="clearfix"></div>
				</ul>
			</nav>
			<nav class="header-nav">
				<div class="social">
					<% for (var i in theme.subnav){ %><a class="<%= i %>" target="_blank" href="<%- url_for(theme.subnav[i]) %>" title="<%= i %>">
						<% if (i=='mail') { %>
							<i class="fa fa-envelope-o"></i>
						<% } else if (i=='linkedin') { %>
							<i class="fa fa-linkedin-square"></i>
						<% } else if (i=='google') { %>
							<i class="fa fa-google-plus"></i>
						<% } else if (i=='facebook') { %>
							<i class="fa fa-facebook-official"></i>
						<% } else { %>
							<i class="fa fa-<%= i %>"></i>
						<% } %>
					</a><% } %>
				</div>
			</nav>
		</header>				
	</div>
</nav>