@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

ol{
  list-style: decimal;
  padding-left: 20px;
}
ul{
  list-style: none;
}
input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

body
  font-family: Roboto,"Roboto","微软雅黑",Microsoft Yahei,"HelveticaNeue-Light","Helvetica Neue Light","Helvetica Neue",Helvetica,Arial,sans-serif;
  font-size:16px;
  /*background:#fff;*/
  background: #eeeeee;
  color: rgba(0,0,0,0.6);
  -webkit-overflow-scrolling: touch
  /*background: url(https://dn-xingoxu.qbox.me/background.jpg) fixed;*/
  background-size: cover;
  width: 100%;
  height: 100%;
  line-height: normal !important;

h1,h2,h3{
  display: block;
}
h1 {
  font-size:1.4em
}
h2 {
  font-size:1.3em
}
h3 {
  font-size:1.1em
}
h4,h5,h6{
  font-size:1em
}
p {
  word-wrap:break-word;
}

a {
  text-decoration:none;
  outline-width:0;
  color: color-link;
  outline: none;
}

.alignleft {
  float:left
}
.alignright {
  float:right
}
.clearfix {
  *zoom:1
}
.clearfix:after {
  content:"";
  display:table;
  clear:both
}
.inner {
  width:1000px;
  margin:0 auto
}
.hide{
  display: none;
}
@media screen and (max-width:1040px) {
  .inner {
    width:100%
  }
}

