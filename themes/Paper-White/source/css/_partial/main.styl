.ripple{
	/*消失的ripple*/
	position: absolute;
	opacity: 0;
	transform: scale(2);
	transition: opacity 750ms;
	background: rgba(0,0,0,.15);
	border-radius: 100%;
	&.ripple-selecting{
		/*正在按下的ripple*/
		opacity: 1;
		animation: ripple 750ms ease-out;	
	}
}

@keyframes ripple-disapper {
  to {
    opacity: 0;
  }
}

@keyframes ripple{
	from {
		opacity: 0;
		transform: scale(0);
	}
	to {
		opacity: 1;
		transform: scale(2);
	}
}


