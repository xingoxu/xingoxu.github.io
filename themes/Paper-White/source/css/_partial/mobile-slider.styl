		.toc-level-2 a{
			padding: 0 24px 0 68px;
		}
		.toc-level-3 a{
			padding: 0 24px 0 88px;
		}
		.toc-level-4 a{
			padding: 0 24px 0 108px;
		}	
		span {
			width: 100%;
			box-sizing: border-box;
			display: block;
			white-space: nowrap;
    		text-overflow: ellipsis;
    		overflow-x: hidden;
    		&.switch-toggle {
    			//reset 
    			width: 32.5px;
    			display: inline-block;
    			white-space: initial;
    			text-overflow: initial;
    			overflow: initial;
    		}
		}
		.viewer-box-wrap{
			&>.viewer-title{
				position: relative;
				overflow: hidden;
			}
			li {
				position: relative;
				overflow: hidden;
			}
		}
		.viewer-title{
			font-weight: 700;
			display: block;
			padding: 18px 24px;
