#viewer{
	display: none;
	position: fixed;
	z-index: 998;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	overflow: hidden;
	background: rgba(0,0,0,0);
	transition: background .25s cubic-bezier(0.4, 0, 0.2, 1);
	&.show{
		background: rgba(0,0,0,0.5);
	}
}
#viewer-box{
	width: 100%;
	height: 100%;
	position: relative;
	color: #333;
	

	#toc-mobile .toc{
		padding: 0;
		ol {
			//reset
			padding: 0;
		}	
	}
	.viewer-box-l{
		box-sizing: border-box;
		position: fixed;
		background: #fefefe;
		width: 70%;
		height: 100%;
		float: left;
		padding: 8px 0;		
		font-size: 12px;
		line-height: 12px;
		box-shadow: 0 0 10px rgba(0,0,0,.5);
		white-space: nowrap;
		text-overflow: ellipsis;
		overflow-x: hidden;
		overflow-y: auto;
		-webkit-overflow-scrolling: touch;
		z-index: 999;
		transform: translate3d(-100%, 0, 0 );
		transition: transform .25s cubic-bezier(0.4, 0, 0.2, 1);
		&.show{
			transform:  translate3d(0, 0, 0);
		}
		a {
			color: #333;
			display: block;
			line-height: 48px;
			padding: 0 24px 0 48px;
		}
		ol {
			padding: 0;
		}
		li {
			list-style: none;
		}
		.toc-level-1{
			
